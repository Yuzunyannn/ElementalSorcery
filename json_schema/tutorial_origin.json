{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Describe": {
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            ]
        }
    },
    "type": "object",
    "required": [
        "title",
        "cover",
        "describe"
    ],
    "properties": {
        "title": {
            "$ref": "#/definitions/Describe"
        },
        "describe": {
            "$ref": "#/definitions/Describe"
        },
        "hover": {
            "$ref": "#/definitions/Describe"
        },
        "cover": {
            "$ref": "./es_item.json"
        },
        "crafts": {
            "$ref": "./es_item.json"
        },
        "building": {
            "type": "object",
            "required": [
                "structure"
            ],
            "properties": {
                "structure": {
                    "type": "string"
                },
                "custom": {
                    "type": "object",
                    "patternProperties": {
                        "^-?\\d+,-?\\d+,-?\\d+$": {
                            "$ref": "./es_item.json"
                        },
                        "^-?\\d+,-?\\d+,-?\\d+->-?\\d+,-?\\d+,-?\\d+$": {
                            "$ref": "./es_item.json"
                        }
                    },
                    "additionalProperties": false
                },
                "customBuildings": {
                    "type": "object",
                    "patternProperties": {
                        "^-?\\d+,-?\\d+,-?\\d+$": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}