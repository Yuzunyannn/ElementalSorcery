{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "TriggerFunc": {
            "oneOf": [
                {
                    "$ref": "#"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#"
                    }
                }
            ]
        },
        "TimesFunc": {
            "properties": {
                "times": {
                    "type": "number",
                    "minimum": 1
                }
            }
        },
        "LootFunc": {
            "properties": {
                "times": {
                    "type": "number",
                    "minimum": 1
                },
                "loot": {
                    "$ref": "#/definitions/Loot"
                },
                "acceptHideItem": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "Loot": {
            "anyOf": [
                {
                    "$ref": "./mult_loot.json"
                },
                {
                    "type": "string",
                    "pattern": "\\$.*"
                }
            ],
            "examples": [
                "elementalsorcery:common/",
                "elementalsorcery:dungeon/"
            ]
        },
        "RNumber": {
            "type": [
                "object",
                "number"
            ],
            "properties": {
                "min": {
                    "type": "number"
                },
                "max": {
                    "type": "number"
                }
            },
            "examples": [
                {
                    "min": 1,
                    "max": 2
                }
            ]
        },
        "Vec3d": {
            "type": [
                "object",
                "array"
            ],
            "items": {
                "type": "number"
            },
            "properties": {
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "z": {
                    "type": "number"
                }
            }
        }
    },
    "type": "object",
    "required": [
        "type"
    ],
    "properties": {
        "type": {
            "enum": [
                "nothing",
                "ref",
                "entity",
                "group",
                "repeat",
                "chest",
                "loot",
                "haystack",
                "explode",
                "magicCircle",
                "potion",
                "mantra",
                "block",
                "dungeon:global",
                "dungeon:area"
            ]
        },
        "probability": {
            "type": "number",
            "default": 0.5
        },
        "trigger": {
            "title": "触发器",
            "additionalProperties": {
                "$ref": "#/definitions/TriggerFunc"
            }
        },
        "inject": {
            "type": "boolean",
            "default": true
        },
        "params": {
            "type": "object"
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "ref"
                    }
                }
            },
            "then": {
                "title": "引用",
                "required": [
                    "/assets"
                ],
                "properties": {
                    "/assets": {
                        "type": "string",
                        "examples": [
                            "elementalsorcery:dungeon/"
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "group"
                    }
                }
            },
            "then": {
                "title": "函数组",
                "required": [
                    "funcs"
                ],
                "properties": {
                    "funcs": {
                        "type": "array",
                        "items": {
                            "$ref": "#"
                        }
                    },
                    "mode": {
                        "enum": [
                            "parallel",
                            "sequence",
                            "random"
                        ]
                    },
                    "isFully": {
                        "type": "boolean"
                    }
                },
                "if": {
                    "properties": {
                        "mode": {
                            "const": "random"
                        }
                    }
                },
                "then": {
                    "properties": {
                        "funcs": {
                            "type": "array",
                            "items": {
                                "allOf": [
                                    {
                                        "$ref": "#"
                                    },
                                    {
                                        "properties": {
                                            "weight": {
                                                "type": "number"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "chest"
                    }
                }
            },
            "then": {
                "title": "箱子构建",
                "allOf": [
                    {
                        "$ref": "#/definitions/LootFunc"
                    },
                    {
                        "properties": {}
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "haystack"
                    }
                }
            },
            "then": {
                "title": "稻草堆",
                "allOf": [
                    {
                        "$ref": "#/definitions/TimesFunc"
                    },
                    {
                        "properties": {
                            "trigger": {
                                "properties": {
                                    "onSweep": {
                                        "$ref": "#/definitions/TriggerFunc"
                                    }
                                },
                                "additionalProperties": false
                            },
                            "highLevel": {
                                "type": "number",
                                "maximum": 16,
                                "minimum": 1,
                                "default": 1
                            },
                            "pressure": {
                                "type": [
                                    "boolean",
                                    "string"
                                ],
                                "default": "random"
                            }
                        }
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "entity"
                    }
                }
            },
            "then": {
                "title": "实体构建",
                "required": [
                    "entityId"
                ],
                "allOf": [
                    {
                        "$ref": "#/definitions/TimesFunc"
                    },
                    {
                        "properties": {
                            "entityId": {
                                "anyOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "$ref": "./entity_ids.json"
                                    }
                                ]
                            },
                            "trigger": {
                                "properties": {
                                    "onLoot": {
                                        "$ref": "#/definitions/TriggerFunc"
                                    },
                                    "onDead": {
                                        "$ref": "#/definitions/TriggerFunc"
                                    }
                                },
                                "additionalProperties": false
                            },
                            "count": {
                                "$ref": "#/definitions/RNumber"
                            }
                        }
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "loot"
                    }
                }
            },
            "then": {
                "title": "掉落奖励",
                "required": [
                    "loot"
                ],
                "allOf": [
                    {
                        "$ref": "#/definitions/LootFunc"
                    },
                    {
                        "properties": {
                            "clearOrigin": {
                                "title": "清除原始掉落",
                                "type": "boolean",
                                "default": true
                            },
                            "goodPattern": {
                                "type": "boolean",
                                "default": true
                            }
                        }
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "explode"
                    }
                }
            },
            "then": {
                "title": "爆炸",
                "allOf": [
                    {
                        "$ref": "#/definitions/TimesFunc"
                    },
                    {
                        "properties": {
                            "level": {
                                "type": "number",
                                "default": -2
                            }
                        }
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "magicCircle"
                    }
                }
            },
            "then": {
                "title": "魔法阵",
                "allOf": [
                    {
                        "$ref": "#/definitions/TimesFunc"
                    },
                    {
                        "properties": {
                            "trigger": {
                                "properties": {
                                    "onActived": {
                                        "$ref": "#/definitions/TriggerFunc"
                                    },
                                    "onDead": {
                                        "$ref": "#/definitions/TriggerFunc"
                                    },
                                    "onClick": {
                                        "$ref": "#/definitions/TriggerFunc"
                                    },
                                    "onDestroyed": {
                                        "$ref": "#/definitions/TriggerFunc"
                                    }
                                },
                                "additionalProperties": false
                            },
                            "activeCD": {
                                "$ref": "#/definitions/RNumber"
                            },
                            "color": {
                                "type": "number",
                                "default": 8401560
                            }
                        }
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "repeat"
                    }
                }
            },
            "then": {
                "title": "重复",
                "allOf": [
                    {
                        "$ref": "#/definitions/TimesFunc"
                    },
                    {
                        "required": [
                            "func"
                        ],
                        "properties": {
                            "func": {
                                "$ref": "#"
                            }
                        }
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "potion"
                    }
                }
            },
            "then": {
                "title": "药水",
                "allOf": [
                    {
                        "$ref": "#/definitions/TimesFunc"
                    },
                    {
                        "required": [
                            "effects"
                        ],
                        "properties": {
                            "isLingering": {
                                "type": "boolean",
                                "default": true
                            },
                            "effects": {
                                "type": "array",
                                "items": {
                                    "type": [
                                        "string",
                                        "object"
                                    ],
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "duration": {
                                            "type": "number",
                                            "minimum": 1
                                        },
                                        "amplifier": {
                                            "type": "number",
                                            "minimum": 0
                                        }
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "mantra"
                    }
                }
            },
            "then": {
                "title": "咒文",
                "allOf": [
                    {
                        "$ref": "#/definitions/TimesFunc"
                    },
                    {
                        "required": [
                            "mantra",
                            "elements"
                        ],
                        "properties": {
                            "mantra": {
                                "$ref": "./mantra_ids.json"
                            },
                            "elements": {
                                "$ref": "./elements_getter.json"
                            },
                            "offset": {
                                "$ref": "#/definitions/Vec3d"
                            },
                            "orient": {
                                "$ref": "#/definitions/Vec3d"
                            },
                            "moveVec": {
                                "$ref": "#/definitions/Vec3d"
                            },
                            "moveSpeed": {
                                "type": "number"
                            },
                            "potent": {
                                "type": "number"
                            },
                            "duration": {
                                "$ref": "#/definitions/RNumber"
                            },
                            "isVertical": {
                                "type": "boolean"
                            }
                        }
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "block"
                    }
                }
            },
            "then": {
                "title": "方块",
                "allOf": [
                    {
                        "$ref": "#/definitions/TimesFunc"
                    },
                    {
                        "required": [
                            "block"
                        ],
                        "properties": {
                            "block": {
                                "$ref": "./es_item.json"
                            }
                        }
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "dungeon:area"
                    }
                }
            },
            "then": {
                "title": "区域",
                "allOf": [
                    {
                        "$ref": "#/definitions/TimesFunc"
                    },
                    {
                        "required": [
                            "func"
                        ],
                        "properties": {
                            "func": {
                                "$ref": "#"
                            },
                            "range": {
                                "$ref": "#/definitions/RNumber"
                            },
                            "onceTryTimes": {
                                "$ref": "#/definitions/RNumber"
                            }
                        }
                    }
                ]
            }
        }
    ]
}