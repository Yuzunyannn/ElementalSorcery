{
    "json.schemas": [
        {
            "fileMatch": [
                "src/main/resources/assets/elementalsorcery/loot_tables/*/*.json"
            ],
            "url": "./json_schema/mc_loot.json"
        },
        {
            "fileMatch": [
                "src/main/resources/assets/elementalsorcery/dungeon/**/*.json"
            ],
            "url": "./json_schema/game_func.json"
        },
        {
            "fileMatch": [
                "tools/paperwork/tutorials/**/*.json"
            ],
            "url": "./json_schema/tutorial_origin.json"
        },
        {
            "fileMatch": [
                "tools/paperwork/parchments/**/*.json"
            ],
            "url": "./json_schema/parchment_origin.json"
        }
    ],
    "json.format.enable": true,
    "editor.defaultFormatter": null,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "json.format.keepLines": false
}